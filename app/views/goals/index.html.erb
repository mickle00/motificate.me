<h1>My Goals</h1>

<div style="padding-bottom: 10px">
  <%= link_to 'New Goal', new_goal_path, class: "btn btn-small" %>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center-text">Name</th>
    <th class="center-text">Frequency</th>
    <th class="center-text">Last 7 Days</th>
    <th class="center-text">Total Completed</th>
    <th class="center-text">Action</th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td class="center-text"><%= link_to goal.name, goal %></td>
    <td class="center-text"><%= goal.frequency %></td>
    <td class="center-text"><%= goal.recent_logs.size %></td>
    <td class="center-text"><%= goal.logs.size %></td>
    <td class="center-text">
      <%= link_to 'Log Activity', new_log_path(:goal => goal), class: "btn btn-small"%>
      </td>
  </tr>
<% end %>
  <tr>
  </tr>
</table>

