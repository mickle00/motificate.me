<h1>All Goals</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Frequency</th>
    <th>Actions</th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= goal.name %></td>
    <td><%= goal.frequency %></td>
    <td><%= link_to 'Show', goal %>
      | <%= link_to 'Edit', edit_goal_path(goal) %>
      | <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Goal', new_goal_path, class: "btn btn-large btn-primary" %>
