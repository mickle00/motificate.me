<h1>Listing logs</h1>

<table>
  <tr>
    <th>Goal</th>
    <th>Description</th>
    <th>Activity date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @logs.each do |log| %>
  <tr>
    <td><%= log.goal.name %></td>
    <td><%= log.description %></td>
    <td><%= log.activity_date %></td>
    <td><%= link_to 'Show', log %></td>
    <td><%= link_to 'Edit', edit_log_path(log) %></td>
    <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

