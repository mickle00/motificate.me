<h1> <%= @user_goal.goal.name %>
<span style="float: right">
  <%= link_to 'Log Activity', new_log_path(:user_goal_id => @user_goal.id), class: "btn" %>
  <%= link_to 'Edit Goal', edit_user_goal_path(@user_goal), class: "btn" %>
  <%= link_to 'My Goals', user_path(current_user), class: "btn" %> 
</span>
<h3>Last 7 Days</h3>
<table class="table table-striped table-bordered">
  <thead>
    <th>Activity Date</th>
    <th>Description</th>
  </thead>
<% @logs.each do |log| %>
  <tr>
    <td><%= log.activity_date %></td>
    <td><%= link_to log.description, edit_log_path(log) %></td>
  </tr>
<% end %>
</table>

